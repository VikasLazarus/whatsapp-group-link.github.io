<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for page in site.pages %}
    <url>
        <loc>{{ site.url }}{{ page.url | remove: 'index.html' | remove: 'sitemap.xml' | remove: 'style.css' }}</loc>
    </url>
    {% endfor %}
    {% for post in site.posts %}
    <url>
        <loc>{{ site.url }}{{ post.url | remove: 'index.html' | remove: 'style.css' }}</loc>
    </url>
    {% endfor %}
</urlset>